<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.Group?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<VBox fx:id="root" alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/10.0.2-internal"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.dansoftware.libraryapp.gui.updatedialog.segment.notification.NotificationSegmentController">
    <children>
        <StackPane VBox.vgrow="SOMETIMES">
            <children>
                <Label styleClass="update-view-available-label" text="%update.view.available">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                    <font>
                        <Font size="32.0"/>
                    </font>
                </Label>
            </children>
        </StackPane>
        <StackPane>
            <children>
                <Group>
                    <children>
                        <HBox spacing="10.0">
                            <children>
                                <Text text="%update.view.current.version" HBox.hgrow="ALWAYS"/>
                                <Label fx:id="currentVersionLabel" text="Label" HBox.hgrow="SOMETIMES">
                                    <HBox.margin>
                                        <Insets right="10.0"/>
                                    </HBox.margin>
                                </Label>
                                <Text text="%update.view.next.version" HBox.hgrow="ALWAYS"/>
                                <Label fx:id="nextVersionLabel" text="Label" HBox.hgrow="SOMETIMES"/>
                            </children>
                            <padding>
                                <Insets left="10.0" right="10.0"/>
                            </padding>
                        </HBox>
                    </children>
                </Group>
            </children>
        </StackPane>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</VBox>
