<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="loginForm" spacing="10.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dansoftware.libraryapp.gui.login.quick.QuickFormController">
    <children>
        <TextField fx:id="usernameInput" minHeight="35.0" prefColumnCount="10" promptText="%login.form.username.prompt">
            <font>
                <Font size="15.0" />
            </font>
        </TextField>
        <PasswordField fx:id="passwordInput" minHeight="35.0" promptText="%login.form.password.prompt">
            <font>
                <Font size="15.0" />
            </font>
        </PasswordField>
        <Button defaultButton="true" minHeight="35.0" minWidth="400.0" mnemonicParsing="false" onAction="#login" prefWidth="${loginForm.width}" text="%login.form.login">
            <font>
                <Font size="15.0" />
            </font>
        </Button>
    </children>
    <VBox.margin>
        <Insets bottom="20.0" left="20.0" right="20.0" />
    </VBox.margin>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
